{
  "name": "reg-monorepo",
  "version": "1.0.0",
  "description": "This is a monorepo built using NX. This is the project of 'Registry Application': for frontend and backend.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm exec nx run-many --target=build",
    "format": "prettier  \"{apps,libs}/**/*.{ts,tsx,js,jsx,json}\" --ignore-path .gitignore",
    "format:check": "pnpm format --check",
    "format:write": "pnpm format --write",
    "lint": "pnpm exec nx run-many --target=lint",
    "tsc": "pnpm exec nx run-many --target=tsc",
    "validate": "pnpm format:write && pnpm tsc && pnpm lint",
    "dev": "pnpm exec nx run-many --target=dev",
    "api:dev": "pnpm exec nx run-many --target=dev --projects=@reg/api",
    "web:dev": "pnpm exec nx run-many --target=dev --projects=@reg/web",
    "prepare": "husky",
    "cm": "cz",
    "cm:offline": "git add . && cz",
    "cm:all": "git add . && cz && git push",
    "migration:generate": "drizzle-kit generate:mysql",
    "migration:push": "drizzle-kit push:mysql",
    "migration:pull": "drizzle-kit pull:mysql",
    "migration:drop": "drizzle-kit drop",
    "drizzle:up": "drizzle-kit up:mysql",
    "drizzle:check": "drizzle-kit check:mysql",
    "drizzle:studio": "drizzle-kit studio"
  },
  "keywords": [
    "nx",
    "monorepo",
    "typescript",
    "nextjs",
    "react",
    "express",
    "nodejs",
    "mysql",
    "drizzle"
  ],
  "author": "Vaibhav Chopra",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "drizzle-kit": "^0.23.0",
    "eslint": "~9.8.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "nx": "19.5.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "drizzle-orm": "^0.32.1",
    "drizzle-zod": "^0.5.1",
    "mysql2": "^3.10.3"
  }
}
