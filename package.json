{
  "name": "reg-monorepo",
  "version": "1.0.0",
  "description": "This is a monorepo built using NX. This is the project of 'Registry Application': for frontend and backend.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm exec nx run-many --target=build",
    "format": "prettier  \"{apps,libs}/**/*.{ts,tsx,js,jsx,json}\" --ignore-path .gitignore",
    "format:check": "pnpm format --check",
    "format:write": "pnpm format --write",
    "lint": "pnpm exec nx run-many --target=lint",
    "tsc": "pnpm exec nx run-many --target=tsc",
    "validate": "pnpm format:write && pnpm tsc && pnpm lint",
    "dev": "pnpm exec nx run-many --target=dev",
    "dev:api": "pnpm exec nx run-many --target=dev --projects=@reg/api",
    "dev:web": "pnpm exec nx run-many --target=dev --projects=@reg/web",
    "prepare": "husky install",
    "cm": "cz",
    "cm:all": "git add . && cz"
  },
  "keywords": [
    "nx",
    "monorepo",
    "typescript",
    "nextjs",
    "react",
    "express",
    "nodejs",
    "mysql",
    "drizzle",
    "javascript"
  ],
  "author": "Vaibhav Chopra",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.0.2",
    "@commitlint/config-conventional": "^19.0.0",
    "@nx/eslint": "18.0.5",
    "@nx/next": "18.0.5",
    "commitizen": "^4.3.0",
    "eslint": "~8.48.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.2",
    "nx": "18.0.5",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
